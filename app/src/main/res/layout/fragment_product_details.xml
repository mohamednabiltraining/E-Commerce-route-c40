<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.ProductDetailsFragment">

    <ImageView
            android:id="@+id/ProductImage"
            android:layout_width="398dp"
            android:layout_height="250dp"
            tools:src="@drawable/img"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    <ImageView
        android:id="@+id/ic_favorite_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_favorite_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="26dp"
        />

    <TextView
        android:id="@+id/Tv_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textColor="#06004F"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/ProductImage"
        app:layout_constraintTop_toBottomOf="@id/ProductImage"
        android:layout_marginStart="16dp"
        tools:text="Nike Air Jordon" />
    <TextView
        android:id="@+id/Tv_Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/ProductImage"
        app:layout_constraintTop_toBottomOf="@id/ProductImage"
        android:layout_marginEnd="16dp"
        tools:text="EGP 3,500" />

    <TextView
        android:id="@+id/Tv_How_Many_Sold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#06004F"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@id/ProductImage"
        app:layout_constraintTop_toBottomOf="@id/Tv_Title"
        android:text="3,230 Sold" />
    <ImageView
        android:id="@+id/star_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_star_24"
        app:layout_constraintStart_toEndOf="@id/Tv_Title"
        app:layout_constraintTop_toBottomOf="@id/Tv_Title"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="19dp"
        />
    <TextView
        android:id="@+id/Tv_Rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        android:text="4.8(7,500)"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/star_icon"
        app:layout_constraintTop_toTopOf="@id/star_icon"
        android:layout_marginTop="2dp"
        />
    <Button
        android:id="@+id/Add_Minus"
        android:layout_width="130dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/Tv_Price"
        app:layout_constraintEnd_toEndOf="@id/Tv_Price"
        android:layout_marginTop="14dp"
        />

    <ImageButton
        android:id="@+id/plus_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/blue2"
        android:src="@drawable/__icon__plus_circle_"
        app:layout_constraintEnd_toEndOf="@id/Add_Minus"
        app:layout_constraintTop_toTopOf="@id/Add_Minus" />
<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:text="1"
    android:textSize="22sp"
    app:layout_constraintStart_toEndOf="@id/Minus_Button"
    app:layout_constraintTop_toTopOf="@id/Add_Minus"
    app:layout_constraintTop_toBottomOf="@id/Add_Minus"
    app:layout_constraintEnd_toStartOf="@id/plus_button"
    android:textColor="@color/white"
    />
    <ImageButton
        android:id="@+id/Minus_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/blue2"
        android:src="@drawable/__icon__subtract_circle_minus_remove_"
        app:layout_constraintStart_toStartOf="@id/Add_Minus"
        app:layout_constraintTop_toTopOf="@id/Add_Minus" />
    <TextView
        android:id="@+id/Tv_Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textColor="#06004F"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/ProductImage"
        app:layout_constraintTop_toBottomOf="@id/Tv_How_Many_Sold"
        android:layout_marginStart="16dp"
        android:text="@string/description" />
    <TextView
        android:id="@+id/Tv_Description_Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/poppins_light"
        app:layout_constraintTop_toBottomOf="@id/Tv_Description"
        app:layout_constraintStart_toStartOf="@id/Tv_Description"
        app:layout_constraintEnd_toEndOf="@id/Add_Minus"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:maxLines="2"
        android:textSize="14sp"
        tools:text="@tools:sample/lorem/random"
        android:textColor="#9906004F"
        android:visibility="visible"
        />
    <TextView
        android:id="@+id/Tv_Read_More"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/read_more"
        android:textSize="14sp"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="@id/Tv_Description_Text"
        app:layout_constraintBottom_toBottomOf="@id/Tv_Description_Text"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_gravity="end"
        android:clickable="true"
        android:focusable="true"/>

    <TextView
        android:id="@+id/Tv_Size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textColor="#06004F"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/ProductImage"
        app:layout_constraintTop_toBottomOf="@id/Tv_Description_Text"
        android:layout_marginStart="16dp"
        android:text="Size" />
    <androidx.cardview.widget.CardView
        android:id="@+id/Size_Button_38"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="18dp"
        app:layout_constraintStart_toStartOf="@id/Tv_Size"
        app:layout_constraintTop_toBottomOf="@id/Tv_Size" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="38"
            android:textColor="@color/blue"
            android:textSize="25sp"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/Size_Button_39"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="18dp"
        app:layout_constraintStart_toEndOf="@id/Size_Button_38"
        app:layout_constraintTop_toBottomOf="@id/Tv_Size" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="39"
            android:textColor="@color/blue"
            android:textSize="25sp"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/Size_Button_40"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="18dp"
        app:layout_constraintStart_toEndOf="@id/Size_Button_39"
        app:layout_constraintTop_toBottomOf="@id/Tv_Size" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="40"
            android:textColor="@color/blue"
            android:textSize="25sp"
            />
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/Size_Button_41"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="18dp"
        app:layout_constraintStart_toEndOf="@id/Size_Button_40"
        app:layout_constraintTop_toBottomOf="@id/Tv_Size" >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="41"
            android:textColor="@color/blue"
            android:textSize="25sp"
            />
    </androidx.cardview.widget.CardView>    <androidx.cardview.widget.CardView
    android:id="@+id/Size_Button_42"
    android:layout_width="35dp"
    android:layout_height="35dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="4dp"
    app:cardCornerRadius="18dp"
    app:layout_constraintStart_toEndOf="@id/Size_Button_41"
    app:layout_constraintTop_toBottomOf="@id/Tv_Size" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="42"
        android:textColor="@color/blue"
        android:textSize="25sp" />
</androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/Tv_Color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textColor="#06004F"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/ProductImage"
        app:layout_constraintTop_toBottomOf="@id/Size_Button_38"
        android:layout_marginStart="16dp"
        android:text="Color" />
    <androidx.cardview.widget.CardView
        android:id="@+id/Color_Button_Black"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="18dp"
        app:layout_constraintStart_toStartOf="@id/Tv_Color"
        app:layout_constraintTop_toBottomOf="@id/Tv_Color"
        android:backgroundTint="@color/black2"
        >
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/Color_Button_Red"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="18dp"
        app:layout_constraintStart_toEndOf="@id/Color_Button_Black"
        app:layout_constraintTop_toBottomOf="@id/Tv_Color"
        android:backgroundTint="@color/red"
        >
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/Color_Button_Blue"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="18dp"
        app:layout_constraintStart_toEndOf="@id/Color_Button_Red"
        app:layout_constraintTop_toBottomOf="@id/Tv_Color"
        android:backgroundTint="@color/blue3"
        >
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/Color_Button_Green"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="18dp"
        app:layout_constraintStart_toEndOf="@id/Color_Button_Blue"
        app:layout_constraintTop_toBottomOf="@id/Tv_Color"
        android:backgroundTint="@color/green"
        >
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/Color_Button_Rose"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="18dp"
        app:layout_constraintStart_toEndOf="@id/Color_Button_Green"
        app:layout_constraintTop_toBottomOf="@id/Tv_Color"
        android:backgroundTint="#FF645A"
        >
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/Tv_Total_Price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_light"
        android:text="Total Price"
        android:textColor="#9906004F"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/ProductImage"
        app:layout_constraintTop_toBottomOf="@id/Color_Button_Black" />
    <TextView
        android:id="@+id/Tv_Price_Total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/Tv_Total_Price"
        app:layout_constraintTop_toBottomOf="@id/Tv_Total_Price"
        android:layout_marginEnd="16dp"
        tools:text="EGP 3,500" />

    <Button
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/blue2"
        android:text="Add To Cart"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/Tv_Total_Price" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_add_shopping_cart_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Color_Button_Blue"
        tools:layout_editor_absoluteX="172dp" />
</androidx.constraintlayout.widget.ConstraintLayout>