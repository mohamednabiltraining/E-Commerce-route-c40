<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="vm"
            type="com.example.e_commerce_route_c40.ui.fragments.productDetails.ProductDetailsVm" />

    </data>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



          <androidx.recyclerview.widget.RecyclerView
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:id="@+id/Rv_ProductImage"
              android:layout_width="match_parent"
              android:layout_height="0dp"

              app:layout_constraintHeight_percent=".4"
              android:orientation="horizontal"
              app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
              />

            <ImageView
                android:id="@+id/ic_favorite_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_favorite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="26dp" />

            <TextView
                android:id="@+id/Tv_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textColor="#06004F"
                android:textSize="18sp"
                android:textStyle="bold"
                android:maxLines="1"
                app:layout_constraintStart_toStartOf="@id/Rv_ProductImage"
                app:layout_constraintTop_toBottomOf="@id/Rv_ProductImage"
                android:layout_marginStart="16dp"
                tools:text="Nike Air Jordon" />

            <TextView
                android:id="@+id/Tv_Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textColor="@color/main_color"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@id/Rv_ProductImage"
                app:layout_constraintTop_toBottomOf="@id/Rv_ProductImage"
                android:layout_marginEnd="16dp"
                tools:text="EGP 3,500" />

            <TextView
                android:id="@+id/Tv_sold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/myfont"
                android:textColor="#06004F"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@id/Rv_ProductImage"
                app:layout_constraintTop_toBottomOf="@id/Tv_Title"
                tools:text="3,230 Sold" />

            <ImageView
                android:id="@+id/star_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"
                app:layout_constraintStart_toEndOf="@id/Tv_Title"
                app:layout_constraintTop_toBottomOf="@id/Tv_Title"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="19dp" />

            <TextView
                android:id="@+id/Tv_Rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/myfont"
                android:textColor="@color/main_color"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@id/star_icon"
                app:layout_constraintTop_toTopOf="@id/star_icon"
                android:layout_marginTop="2dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/plus_sub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/rounded_counter_product"
                app:layout_constraintEnd_toEndOf="@id/Tv_Price"
                app:layout_constraintTop_toBottomOf="@id/Tv_Price"
                app:layout_constraintWidth_percent=".30">

                <ImageView
                    android:id="@+id/plus_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:src="@drawable/icon_plus_circle"
                    android:paddingStart="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toEndOf="@+id/minus_Button"
                    app:layout_constraintTop_toTopOf="@id/plus_sub"
                    android:onClick="@{() -> vm.incrementCounter()}"
                    tools:ignore="RtlSymmetry" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:text="@{String.valueOf(vm._counterLiveData)}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/plus_button"
                    app:layout_constraintStart_toStartOf="@id/minus_Button"
                    app:layout_constraintTop_toTopOf="@id/plus_sub"
                    tools:text="1" />

                <ImageView
                    android:id="@+id/minus_Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/transparent"
                    android:src="@drawable/icon_minus_circle"
                    android:paddingEnd="15dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/plus_button"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/plus_sub"
                    android:onClick="@{() -> vm.decreasesCounter()}"
                    tools:ignore="RtlSymmetry" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <TextView
                android:id="@+id/Tv_Description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textColor="#06004F"
                android:textSize="18sp"
                android:textStyle="bold"

                app:layout_constraintStart_toStartOf="@id/Rv_ProductImage"
                app:layout_constraintTop_toBottomOf="@id/Tv_sold"
                android:layout_marginStart="16dp"
                android:text="Description" />

            <TextView
                android:id="@+id/Tv_Description_Text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:fontFamily="@font/myfont"
                app:layout_constraintTop_toBottomOf="@id/Tv_Description"
                app:layout_constraintStart_toStartOf="@id/Tv_Description"
                app:layout_constraintEnd_toEndOf="@id/plus_sub"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:maxLines="@{vm.isExpandedLiveData() ? Integer.MAX_VALUE : 2}"
                android:textSize="14sp"
                android:textColor="#9906004F"
                android:visibility="visible" />

            <TextView
                android:id="@+id/Tv_Read_More"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{vm.isExpandedLiveData() ?  `Read Less` :  `Read Morw` }"
                android:textSize="14sp"
                android:textColor="@color/main_color"
                app:layout_constraintEnd_toEndOf="@id/Tv_Description_Text"
                app:layout_constraintTop_toBottomOf="@id/Tv_Description_Text"
                android:layout_gravity="end"
                android:clickable="true"
                android:focusable="true"
                android:onClick="@{() -> vm.toggleDescription()}"
                />



            <TextView
                android:id="@+id/Tv_Size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textColor="#06004F"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/Rv_ProductImage"
                app:layout_constraintTop_toBottomOf="@id/Tv_Description_Text"
                android:layout_marginStart="16dp"
                android:text="Size" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/Rv_sizes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/Tv_Size"
                android:orientation="horizontal"
                tools:listitem="@layout/size_item_builder"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

                />










            <TextView
                android:id="@+id/Tv_Color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textColor="#06004F"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/Rv_ProductImage"
                app:layout_constraintTop_toBottomOf="@id/Rv_sizes"
                android:layout_marginStart="16dp"
                android:text="@string/color" />

            <androidx.cardview.widget.CardView
                android:id="@+id/Color_Button_Black"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="18dp"
                app:layout_constraintStart_toStartOf="@id/Tv_Color"
                app:layout_constraintTop_toBottomOf="@id/Tv_Color"
                android:backgroundTint="@color/main_color" />

            <androidx.cardview.widget.CardView
                android:id="@+id/Color_Button_Red"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="18dp"
                app:layout_constraintStart_toEndOf="@id/Color_Button_Black"
                app:layout_constraintTop_toBottomOf="@id/Tv_Color"
                android:backgroundTint="@color/black" />

            <androidx.cardview.widget.CardView
                android:id="@+id/Color_Button_Blue"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="18dp"
                app:layout_constraintStart_toEndOf="@id/Color_Button_Red"
                app:layout_constraintTop_toBottomOf="@id/Tv_Color"
                android:backgroundTint="@color/main_color" />

            <androidx.cardview.widget.CardView
                android:id="@+id/Color_Button_Green"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="18dp"
                app:layout_constraintStart_toEndOf="@id/Color_Button_Blue"
                app:layout_constraintTop_toBottomOf="@id/Tv_Color"
                android:backgroundTint="@color/black" />

            <androidx.cardview.widget.CardView
                android:id="@+id/Color_Button_Rose"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="18dp"
                app:layout_constraintStart_toEndOf="@id/Color_Button_Green"
                app:layout_constraintTop_toBottomOf="@id/Tv_Color"
                android:backgroundTint="#FF645A" />

            <TextView
                android:id="@+id/Tv_Total_Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/myfont"
                android:text="@string/total_price"
                android:textColor="#9906004F"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/Rv_ProductImage"
                app:layout_constraintTop_toBottomOf="@id/Color_Button_Black" />

            <TextView
                android:id="@+id/Tv_Price_Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@color/main_tv_color"
                android:textSize="18sp"
                android:text="@{String.valueOf(vm.totalPriceLiveData)}"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/Tv_Total_Price"
                app:layout_constraintTop_toBottomOf="@id/Tv_Total_Price"
                android:layout_marginEnd="16dp"
                tools:text="EGP 3,500" />

            <Button
                android:id="@+id/Add_to_cart_button"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginEnd="16dp"
                android:backgroundTint="@color/main_tv_color"
                android:text="@string/add_to_cart"
                android:textSize="20sp"
                android:drawableStart="@drawable/ic_add"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/Tv_Total_Price" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>